<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#343534" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/personalmessage"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/show_my_message_Lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="30dp"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/headimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="15dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/news_focus_pressd_style"
                    android:maxHeight="90dp"
                    android:maxWidth="90dp"
                    android:padding="5dp"
                    android:src="@drawable/img05" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#dedede" />
            
            <RelativeLayout
                android:id="@+id/my_message_rel0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/heart"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/nickName"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/email"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/myemill"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myemill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/call"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/mycall"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/my_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/location"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/myaddress"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/myaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/sex"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/sex"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/book"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/address"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />

            <RelativeLayout
                android:id="@+id/my_message_rel6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_pressed_setting_style" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/tag"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="@string/personalizedsignature"
                    android:textSize="20sp" />

                <com.mess.ordermess.ui.AutoScrollTextView
                    android:id="@+id/personalizedsignature"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:gravity="right"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:text="@string/unsure"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#dedede" />

            <TextView
                android:id="@+id/exitbutton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/my_pressed_bymess_style"
                android:gravity="center"
                android:text="退出当前账号"
                android:textColor="@color/withe"
                android:textSize="22sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dedede" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>